/* pages/ucenter/evaluate/evaluate.wxss */
.wrap {
  min-height: 300rpx;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  padding: 15rpx 32rpx;
}

.product {
  display: flex;
  align-items: center;
  height: 180rpx;
}

.product .img {
  height: 145rpx;
  width: 145rpx;
  background-color: #f4f4f4;
}

.product .info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100rpx;
  margin-left: 20rpx;
  width: 500rpx;
}

.product .title {
  color: #555;
  font-size: 27rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product .specDesc {
  color: #999;
  font-size: 25rpx;
}

.rate-wrap {
  display: flex;
  height: 80rpx;
  align-items: center;
  font-size: 27rpx;
  color: #333;
}

.rate {
  margin: 0 10rpx 5rpx 10rpx;
}

.input {
  margin-left: -15px !important;
  min-height: 180rpx;
}

.upload {
  display: flex;
  flex-direction: column;
  color: #999;
  font-size: 25rpx;
}

.bottom {
  border-top: 2rpx solid #f4f4f4;
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.bottom .btn {
  width: 150rpx !important;
  height: 32px !important;
  line-height: 30px !important;
}

.post {
  display: flex;
  flex-direction: column;
}

.post .time {
  color: #999;
  font-size: 25rpx;
  margin-bottom: 10rpx;
}

.post .content {
  color: #333;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

/* 添加图片 */
.uploader {
  padding: 10px 0;
}
.uploader-title {
  line-height: 20px;
}
.uploader-content {
  display: flex;
  flex-flow: row wrap;
  padding: 10px 0;
}
.uploader-content-item {
  position: relative;
  margin-right: 15px;
  margin-bottom: 15px;
  display: block;
}
.uploader-content-item image {
  border: 1rpx solid #dadada;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  height: 80px;
  width: 80px;
  display: block;
}
.uploader-content-item .close {
  line-height: 1;
  text-align: center;
  position: absolute;
  padding: 3px;
  top: -12px;
  right: -12px;
  height: 20px;
  width: 20px;
  -webkit-border-radius: 15px;
  -moz-border-radius: 15px;
  border-radius: 15px;
  background-color: rgba(0, 0, 0, 0.2);
}

.img-picker {
  position: relative;
  background-color: #F6F6F6;
  display: block;
  height: 80px;
  width: 80px;
  border: 1rpx solid #dadada;
  font-size: 40px;
  padding: 20px;
  line-height: 1;
  text-align: center;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.img-picker:before, .img-picker:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #A3A3A3;
}
.img-picker:before {
  width: 2px;
  height: 32px;
}
.img-picker:after {
  width: 32px;
  height: 2px;
}