  justify-content: space-between;
}

.cart-bottom .cart_bottom_right .cart_btn {
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  background: #ecaf57;
  color: #fff;
  height: 80rpx;
  border: none;
