/* pages/settlement/settlement.wxss */

.ucenter {
  box-sizing: border-box;
  padding: 10px 10px 80px;
  background: #f7f7f7;
  width: 100%;
  z-index: -1;
}

/* 地址栏布局开始 */

.address_box {
  padding: 15px 10px;
  margin-bottom: 30rpx;
  background: #fff;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  border-radius: 5px;
}

.address_box .image {
  width: 40rpx;
  height: 40rpx;
}

.address_box .right {
  width: 24rpx;
  height: 24rpx;
}

.address_box .information {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 500rpx;
}

.address_box .information .name {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.address_box .information .phone {
  font-size: 28rpx;
}

.address_box .address_box .address_text {
  padding-top: 20rpx;
}

/* 地址栏布局结束 */

/* 商品信息布局开始 */

.product {
  background: #fff;
  border-radius: 5px;
}

.product .item {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.product .item .title {
  display: flex;
  align-items: center;
}

.product .item .title .tlabel {
  padding-bottom: 8rpx;
  padding-right: 15rpx;
}

.product .item .body {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-top: 10rpx;
}

.product .item .body .left {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}

.product .item .body .body_top {
  display: flex;
  flex-direction: column;
}

.product .item .body .body_top .body_text {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 30rpx;
}

.product .item .body .body_top .body_text .body_title {
  width: 350rpx;
}

.product .item .body .body_top .body_center {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 30rpx;
  padding: 10rpx 0;
}

.product .item .body .body_top .body_center .explain {
  background: #f5f6f7;
  color: #a8a9aa;
  width: 300rpx;
  display: flex;
  justify-content: center;
  border-radius: 5px;
}

.product .item .body .body_top .body_text .number {
  color: #a8a9aa;
}

.product .item .body .body_top .body_center .number {
  color: #a8a9aa;
}

.product .item .bottom {
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.bottom_list {
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product .item .bottom .bottom_text {
  font-size: 30rpx;
  padding-left: 35rpx;
}

.product .item .bottom .bottom_list .input_text {
  width: 100%;
}

/* 商品信息布局结束 */

.agreement {
  padding: 10px 0;
}

.agreement .agreement_text {
  color: #80c7fa;
}

.checked {
  color: #333;
  font-size: 26rpx;
}

.end {
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 10px 10px 15px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #ebebeb;
  background: #fff;
}

.end .l {
  font-size: 30rpx;
  color: #ecaf57;
}

.end .r {
  width: 200rpx;
  background: #ecaf57;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 5px;
}

.end .r.active {
  background: #ecaf57;
}

.end .r.disabled {
  background: #ccc !important;
}
