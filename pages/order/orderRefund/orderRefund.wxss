.content {
  padding: 10px 0 0;
  background-color: #F5F6F7;
}

.order-return {
  font-size: 0.9rem;
  background-color: #fff;
  padding: 15px 15px 80px;
}

.product {
    padding: 10px 0;
  display: flex;
  align-items: stretch;
  border-bottom: 1rpx solid #dadada;
}

.product-img {
  background-color: #cccccc;
  flex-shrink: 0;
  height: 70px;
  width: 70px;
}

.product-info {
  padding: 10px;
  flex-grow: 1;
}
.product-info .product-name {
  line-height: 30px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.product-info .product-meta {
  line-height: 20px;
}
.list-item {
  padding: 10px 0;
  border-bottom: 1rpx solid #dadada;
}

.list-item-content {
  margin-bottom: 5px;
  justify-content: space-between;
  display: flex;
}
.list-item-content:last-child {
  margin-bottom: 0;
}
.list-item-content .list-content {
  flex-grow: 1;
  text-align: right;
  color: #848484;
}

.uploader {
  padding: 10px 0;
}
.uploader-title {
  line-height: 20px;
}
.uploader-content {
  display: flex;
  flex-flow: row wrap;
  padding: 10px 0;
}
.uploader-content-item {
  position: relative;
  margin-right: 15px;
  margin-bottom: 15px;
  display: block;
}
.uploader-content-item image {
  border: 1rpx solid #dadada;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  height: 80px;
  width: 80px;
  display: block;
}
.uploader-content-item .close {
  line-height: 1;
  text-align: center;
  position: absolute;
  padding: 3px;
  top: -12px;
  right: -12px;
  height: 20px;
  width: 20px;
  -webkit-border-radius: 15px;
  -moz-border-radius: 15px;
  border-radius: 15px;
  background-color: rgba(0, 0, 0, 0.2);
}

.img-picker {
  position: relative;
  background-color: #F6F6F6;
  display: block;
  height: 80px;
  width: 80px;
  border: 1rpx solid #dadada;
  font-size: 40px;
  padding: 20px;
  line-height: 1;
  text-align: center;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.img-picker:before, .img-picker:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #A3A3A3;
}
.img-picker:before {
  width: 2px;
  height: 32px;
}
.img-picker:after {
  width: 32px;
  height: 2px;
}

.comment {
  font-size: 0.7rem;
  color: #848484;
  padding: 5px 0;
}

.fix-bottom {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  position: fixed;
  bottom: 10px;
  left: 0;
  width: 100%;
  padding: 15px;
}

.btn-main {
  display: block;
  text-align: center;
  color: white;
  background-color: #F1A84B;
  font-size: 1.1rem;
}

.mask {
  height: 100%;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-end;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 100;
}

.slide-up-panel {
  position: relative;
  height: 400px;
  background-color: white;
}
.slide-up-panel .header {
  text-align: center;
  padding: 15px;
  line-height: 1;
}
.slide-up-panel .body {
  padding: 15px;
}
.slide-up-panel .footer {
  position: absolute;
  bottom: 20px;
  left: 0;
  width: 100%;
}

.select-list-item {
  padding: 0 10px;
}

.btn-full {
  background-color: #F1A84B;
  color: white;
  font-size: 1.1rem;
}
