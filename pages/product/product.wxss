.detail {
  background: #fff;
  padding-bottom: 100rpx;
}

.detail image {
  display: block !important;
  height: auto;
  width: 100%;
}

.bottom {
  position: fixed;
  bottom: 0;
  z-index: 120;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  background: #fff;
  border-top: 1rpx solid #ebebeb;
}

.b-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  border-right: 1rpx solid #ebebeb;
}

.icon-info .van-info {
  background-color: #b4282d !important;
}

.b-wrap.active {
  background: #ebebeb;
}

.buy {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 225rpx;
  color: #777;
  font-size: 28rpx;
}

.buy.active {
  background: #ebebeb;
}

.add-cart {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 225rpx;
  font-size: 28rpx;
  color: #fff;
  background: #b4282d;
}

.add-cart.active {
  background: #981d22;
}

.coupon-pop .title {
  text-align: center;
  font-size: 28rpx;
  color: #555;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.coupon-wrap {
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 0rpx 32rpx 180rpx 32rpx;
  max-height: 800rpx;
}

.coupon-wrap .item {
  margin-bottom: 30rpx;
}

.sku {
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 40rpx 32rpx 180rpx 32rpx;
}

.sku .close {
  position: absolute;
  top: 20rpx;
  right: 25rpx;
}

.sku .info {
  display: flex;
  margin-bottom: 40rpx;
}

.sku .info .img {
  height: 180rpx;
  width: 180rpx;
  background: #f4f4f4;
}

.sku .sku-desc {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 180rpx;
  margin-left: 20rpx;
}

.sku .info .price {
  font-size: 28rpx;
  color: #b4282d;
  display: inline-block;
}

.sku .info .origin-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  display: inline-block;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}

.sku .info .spec {
  font-size: 29rpx;
  color: #555;
  margin-bottom: 10rpx;
}

.sku .title {
  margin-bottom: 18rpx;
  font-size: 29rpx;
  color: #555;
}

.sku .wrap {
  display: flex;
  flex-wrap: wrap;
}

.sku .value {
  display: inline-block;
  height: 56rpx;
  padding: 0 35rpx;
  line-height: 56rpx;
  text-align: center;
  margin-right: 25rpx;
  margin-bottom: 18rpx;
  border: 1rpx solid #555;
  font-size: 25rpx;
  color: #555;
}

.sku .value.disabled {
  border: 1rpx solid #ccc;
  color: #ccc;
}

.sku .value.selected {
  border: 1rpx solid #b4282d;
  color: #b4282d;
}

.wxbtn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 0;
  padding-right: 0;
  box-sizing: none;
  font-size: none;
  text-align: none;
  text-decoration: none;
  line-height: none;
  border: none !important;
  border-radius: none;
  overflow: hidden;
  color: none;
  background-color: transparent;
  margin-top: 8rpx;
}

.wxbtn::after {
  border: none;
}
