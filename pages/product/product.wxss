/* pages/commodity/commodity.wxss */
@import "../../lib/wxParse/wxParse.wxss";

.ucenter {
  width: 750rpx;
  height: 100%;
  background: #f7f7f7;
  position: absolute;
  z-index: -2;
  display: flex;
  flex-direction: column;
}

.gallery {
  width: 750rpx;
  height: 750rpx;
}

.gallery .image {
  width: 750rpx;
  height: 750rpx;
}

.top_title {
  padding: 30rpx;
  background: #fff;
}

.top_title .title_price {
  display: flex;
  align-items: center;
}

.top_title .title_price .tlabel {
  padding-bottom: 5rpx;
}

.top_title .title_price .price {
  padding-left: 10rpx;
  font-size: 40rpx;
  color: #ecaf57;
}

.top_title .title_price .origin_price {
  margin-left: 7rpx;
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.top_title .title_price .sales {
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.top_title .title_text {
  display: flex;
  align-items: center;
}

.top_title .title_text .title_remark {
  margin-top: 10rpx;
  font-size: 32rpx;
  font-weight: 500;
  position: relative;
  padding-right: 20px;
  box-sizing: border-box;
}

.top_title .title_text .title_remark .tui-share-btn {
  display: block;
  background: none;
  margin-right: 50rpx;
  padding: 0;
  border-radius: 0;
}

.top_title .title_text .title_remark .tui-share-position {
  position: absolute;
  right: 0;
  top: 30rpx;
}

.top_title .title_text .title_remark .tui-tag-share {
  display: flex;
  align-items: center;
}

.top_title .title_text .title_remark .tui-size {
  font-size: 24rpx;
  line-height: 24rpx;
}

.top_title .title_text .title_remark .tui-share-text {
  padding-left: 8rpx;
}

.top_title .title_text .title_remark .tui-gray {
  color: #999;
}

.sprcifications {
  margin-top: 20rpx;
}

.attr-wrap {
  background: #fff;
  padding-left: 32rpx;
  font-size: 26rpx;
}

.attr-wrap.active {
  background: #ebebeb;
}

.attr {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  padding-right: 32rpx;
  height: 100rpx;
  border-bottom: 1px solid #f4f4f4;
}

.attr .left {
  display: flex;
  align-items: center;
}

.attr .title {
  color: #777;
  margin-right: 20rpx;
}

.attr .limit {
  width: 600rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.attr .arrow {
  width: 16rpx;
  height: 27rpx;
}

.delivery {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  padding-right: 32rpx;
  min-height: 145rpx;
  border-bottom: 1px solid #f4f4f4;
}

.delivery .title {
  color: #777;
  margin-right: 20rpx;
}

.delivery .right {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 610rpx;
}

.delivery .info {
  width: 590rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.delivery .time {
  color: #777;
  margin-top: 10rpx;
}

.delivery .arrow {
  width: 16rpx;
  height: 27rpx;
}

.service {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  padding-right: 32rpx;
  min-height: 120rpx;
  border-bottom: 1px solid #f4f4f4;
}

.service .title {
  color: #777;
  margin-right: 20rpx;
}

.service .right {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 610rpx;
  padding: 10rpx 0;
}

.service .info {
  width: 590rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.service .red-point {
  color: #b4282d;
  margin-right: 10rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #b4282d;
  display: inline-block;
  margin-bottom: 5rpx;
}

.service .info .item {
  margin-right: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.service .arrow {
  width: 16rpx;
  height: 27rpx;
}

.service-wrap .h {
  border-bottom: 1rpx solid #ebebeb;
  line-height: 110rpx;
  height: 110rpx;
  text-align: center;
  font-size: 32rpx;
  color: #555;
}

.service-wrap .c {
  height: 600rpx;
  margin-bottom: 50rpx;
}

.service-wrap .c .desc {
  margin-bottom: 20rpx;
  padding-left: 50rpx;
  padding-right: 30rpx;
  position: relative;
}

.service-wrap .c .desc::after {
  content: "";
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background: #b4282d;
  border-radius: 50%;
  left: 30rpx;
  top: 15rpx;
}

.service-wrap .c .desc .dt {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 10rpx;
  margin-top: 15rpx;
}

.service-wrap .c .desc .dc {
  font-size: 26rpx;
  color: #999;
  padding-right: 26rpx;
}

.comments {
  margin-top: 20rpx;
}

.comments .header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  padding-right: 32rpx;
  height: 100rpx;
  border-bottom: 1px solid #f4f4f4;
}

.comments .right {
  display: flex;
  align-items: center;
}

.comments .rate {
  color: #b4282d;
  margin-right: 5rpx;
}

.comments .text {
  margin-right: 10rpx;
  color: #999;
}

.comments .arrow {
  width: 16rpx;
  height: 27rpx;
}

.select-comment {
  background: #fff;
  padding: 10rpx 32rpx 20rpx 32rpx;
  margin-bottom: 10rpx;
}

.wrap {
  background: #fff;
}

