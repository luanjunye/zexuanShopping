/* pages/settlement/settlement.wxss */

.ucenter {
  background: #f7f7f7;
  width: 100%;
  height: 100%;
  z-index: -1;
  position: absolute;
  display: flex;
  flex-direction: column;
}

/* 地址栏布局开始 */

.address_box {
  margin: 30rpx;
  background: #fff;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  height: 250rpx;
  border-radius: 5px;
}

.address_box .image {
  width: 40rpx;
  height: 40rpx;
}

.address_box .right {
  width: 24rpx;
  height: 24rpx;
}

.address_box .information {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 500rpx;
}

.address_box .information .name{
  font-size: 36rpx;
  margin-right: 20rpx;
}

.address_box .information .phone{
  font-size: 28rpx;
}

.address_box .address_box .address_text{
  padding-top: 20rpx;
}

/* 地址栏布局结束 */

