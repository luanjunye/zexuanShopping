/* pages/shoppingcart/ShoppingCart.wxss */
.ucenter{
  background: #F7F7F7;
  width: 100%;
  height: 100%;
  z-index: -1;
  position: absolute;
  display: flex;
  flex-direction: column;
}

.no-cart {
  margin-top: 300rpx;
  margin-bottom: 50rpx;
}

.no-cart-small {
  margin-top: 100rpx;
  margin-bottom: 100rpx;
}



/* 无列表 */

.add {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}

.add .image {
  width: 250rpx;
  height: 250rpx;
}

.add .txt {
  font-size: 29rpx;
  color: #999;
}

.login-wrap {
  display: flex;
  justify-content: center;
}

.login {
  width: 500rpx;
  height: 90rpx;
  font-size: 29rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  background-color: #b4282d;
  border-radius: 5rpx;
}

/* 购物车列表 */

.cart-wrap .item {
  height: 220rpx;
  margin: 20rpx;
  background: #fff;
  border-bottom: none !important;
}

.cart-wrap .product {
  display: flex;
  align-items: center;
  height: 170rpx;
  padding: 20rpx 32rpx;
}

.cart-wrap .product .image {
  width: 170rpx;
  height: 170rpx;
  background-color: #f4f4f4;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.cart-wrap .product .info {
  display: flex;
  flex-direction: column;
  height: 170rpx;
  justify-content: space-between;
  width: 438rpx;
}

.cart-wrap .product .info .top {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.cart-wrap .product .info .top .main{
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart-wrap .product .info .top .main .tlabel{
  padding-bottom: 5rpx;
}

.cart-wrap .product .info .title {
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
  font-size: 26rpx;
  padding-left: 10rpx;
}

.cart-wrap .product .info .spec {
  margin-top: 10rpx;
  padding: 0 10rpx;
  color: #999;
  background: #fafafa;
  border: 2rpx solid #efefef;
  border-radius: 5rpx;
  font-size: 22rpx;
  display: flex;
}

.cart-wrap .product .info .arrow {
  margin-top: 4rpx;
  margin-left: 10rpx;
}

.cart-wrap .product .info .bottom {
  display: flex;
  justify-content: space-between;
}

.cart-wrap .product .info .price {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  color: #ECAF57;
  font-weight: 500;
}

.cart-wrap .product .info .origin {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  color: #999;
  font-size: 22rpx;
  text-decoration: line-through;
  font-weight: normal;
  overflow: hidden;
}

.delete {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #e83a3a;
  height: 210rpx;
  color: #fff;
}

/* 底部统计下单 */

.cart-bottom {
  z-index: 100;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  border-top: 2rpx solid #f0f0f0;
}

.cart-bottom .left {
  margin-left: 32rpx;
}

.cart-bottom .checked-all {
  color: #999 !important;
  font-size: 29rpx;
}

.cart-bottom .right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.cart-bottom .right .cost{
 display: flex;
 align-items: center;
 flex-direction: column;
 justify-content: center;
}

.cart-bottom .right .cost .freight {
  font-size: 29rpx;
  color: #ECAF57;
  margin-right: 20rpx;
}

.cart-bottom .right .cost .total {
  font-size: 29rpx;
  color: #ECAF57;
  margin-right: 20rpx;
}

.cart-bottom .right .checkout {
  line-height: 100rpx;
  width: 225rpx;
  text-align: center;
  font-size: 29rpx;
  background: #ECAF57;
  color: #fff;
}

.cart-bottom .right .disabled {
  background: #ccc !important;
}

.cart-bottom .right .checkout.active {
  background: #981d22;
}

